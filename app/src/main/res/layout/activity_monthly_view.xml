
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:orientation="vertical"

tools:context=".MonthlyView"
    android:weightSum="1">

<CalendarView android:id="@+id/calendar"
    android:layout_width="331dp"
    android:layout_height="312dp"
    android:showWeekNumber="false"
    android:clickable="false"
    android:contextClickable="false"
    android:backgroundTint="#ff1357" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Events On This Week"
        android:id="@+id/button3"
        android:layout_weight="0.41" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Events On This Day"
        android:id="@+id/button2"
        android:layout_weight="0.47" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Event On This Day"
        android:id="@+id/button"
        android:background="#ff1b60" />

</LinearLayout>